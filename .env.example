# ===============================================
# SUBDOMAIN GRATIS VIN NESIA - Environment Variables
# Copy this file to .env.local and fill in your values
# ===============================================

# ===============================================
# SUPABASE CONFIGURATION
# ===============================================
# Get these from your Supabase project dashboard
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database URL (for migrations/seeds)
DATABASE_URL=postgresql://postgres:[password]@db.[project].supabase.co:5432/postgres

# ===============================================
# AUTHENTICATION
# ===============================================
# NextAuth configuration
NEXTAUTH_URL=https://subdomain.vinnesia.my.id
NEXTAUTH_SECRET=your-super-secret-nextauth-key-minimum-32-characters

# Admin credentials
NEXT_PUBLIC_ADMIN_EMAILS=admin.vinnesia@gmail.com
ADMIN_PASSWORD=admin123

# ===============================================
# EMAIL CONFIGURATION
# ===============================================
# SMTP settings for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=admin@vinnesia.my.id
SMTP_PASS=your-app-password-here

# Email addresses
FROM_EMAIL=admin@vinnesia.my.id
SUPPORT_EMAIL=support@vinnesia.my.id
BUSINESS_EMAIL=Vin.nesia.id@gmail.com

# ===============================================
# CLOUDFLARE CONFIGURATION
# ===============================================
# For DNS management automation
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ZONE_ID=your-zone-id
CLOUDFLARE_EMAIL=your-cloudflare-email@example.com

# ===============================================
# DNS CONFIGURATION
# ===============================================
# Your domain configuration
DOMAIN_NAME=vinnesia.my.id
SUBDOMAIN_DOMAIN=vinnesia.my.id
DNS_TTL=300

# ===============================================
# FILE UPLOAD CONFIGURATION
# ===============================================
# File size limits (in bytes)
MAX_FILE_SIZE=5242880  # 5MB
MAX_DONATION_IMAGE_SIZE=2097152  # 2MB

# Allowed file types
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# ===============================================
# RATE LIMITING
# ===============================================
# API rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds

# Subdomain request limits
SUBDOMAIN_REQUEST_LIMIT=3  # per user
SUBDOMAIN_REQUEST_WINDOW=86400000  # 24 hours

# ===============================================
# SECURITY
# ===============================================
# JWT settings
JWT_SECRET=your-jwt-secret-key-minimum-32-characters
JWT_EXPIRES_IN=7d

# CORS settings
CORS_ORIGIN=https://subdomain.vinnesia.my.id
CORS_CREDENTIALS=true

# ===============================================
# MONITORING & ANALYTICS
# ===============================================
# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Sentry error tracking
SENTRY_DSN=your-sentry-dsn-here
SENTRY_ORG=vinnesia
SENTRY_PROJECT=subdomain-gratis

# Logging level
LOG_LEVEL=info

# ===============================================
# FEATURE FLAGS
# ===============================================
# System features
MAINTENANCE_MODE=false
REGISTRATION_ENABLED=true
DONATIONS_ENABLED=true
SUBDOMAIN_CREATION_ENABLED=true

# Admin features
ADMIN_PANEL_ENABLED=true
BULK_ACTIONS_ENABLED=true
USER_IMPERSONATION_ENABLED=false

# ===============================================
# THIRD PARTY SERVICES
# ===============================================
# Discord webhook for notifications (optional)
DISCORD_WEBHOOK_URL=your-discord-webhook-url

# Slack webhook for admin notifications (optional)
SLACK_WEBHOOK_URL=your-slack-webhook-url

# ===============================================
# CACHING
# ===============================================
# Redis configuration (optional, for production)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Cache TTL settings (in seconds)
STATS_CACHE_TTL=300  # 5 minutes
USER_CACHE_TTL=600   # 10 minutes
DNS_CACHE_TTL=1800   # 30 minutes

# ===============================================
# WEBHOOK CONFIGURATION
# ===============================================
# Webhook secrets for external integrations
WEBHOOK_SECRET=your-webhook-secret-key
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret
CLOUDFLARE_WEBHOOK_SECRET=your-cloudflare-webhook-secret

# ===============================================
# BACKUP & STORAGE
# ===============================================
# AWS S3 for backups (optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-southeast-1
AWS_S3_BUCKET=vinnesia-backups

# ===============================================
# DEVELOPMENT & DEBUGGING
# ===============================================
# Development settings
NODE_ENV=production
DEBUG=false
VERBOSE_LOGGING=false

# Database debugging
DATABASE_LOGGING=false
QUERY_LOGGING=false

# Performance monitoring
PERFORMANCE_MONITORING=true
MEMORY_MONITORING=true

# ===============================================
# API KEYS & TOKENS
# ===============================================
# External API keys (if needed)
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# Social login providers (get from respective platforms)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret

# ===============================================
# DEPLOYMENT SPECIFIC
# ===============================================
# Vercel specific
VERCEL_URL=subdomain.vinnesia.my.id
VERCEL_REGION=sin1

# Build configuration
SKIP_BUILD_STATIC_GENERATION=false
DISABLE_EDGE_FUNCTIONS=false

# ===============================================
# CUSTOM CONFIGURATION
# ===============================================
# Site branding
SITE_NAME=SUBDOMAIN GRATIS VIN NESIA
SITE_DESCRIPTION=Platform subdomain gratis untuk semua
SITE_KEYWORDS=subdomain gratis,free subdomain,domain indonesia,vinnesia

# Contact information
CONTACT_PHONE=+62-XXX-XXXX-XXXX
CONTACT_ADDRESS=Indonesia

# Social media links
TWITTER_URL=https://twitter.com/vinnesia
FACEBOOK_URL=https://facebook.com/vinnesia
INSTAGRAM_URL=https://instagram.com/vinnesia
LINKEDIN_URL=https://linkedin.com/company/vinnesia

